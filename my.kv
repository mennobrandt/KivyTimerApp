<MyGrid>
    GridLayout:
        size: root.width, root.height
        rows: 3
        center: root.width / 2, root.height / 2

        padding: 40
        spacing: 30

        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle: 
                pos: self.pos
                size: self.size
        
        Image:
            source: "timer_logo.png"
            size: self.size
            pos: self.pos
        
        Button:
            text: "timer"
            size_hint: 0.70, 0.3
            font_size: '40sp'
            bold: True
                
            background_normal: ''
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1

        Button:
            text: "algorithms"
            size_hint: 0.70, 0.3
            font_size: '40sp'
            bold: True

            background_normal: ''
            background_color: 1, 1, 1, 1
            color: 0, 0, 0, 1